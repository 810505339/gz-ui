{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue","packages"],
  
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "nodenext",
    "types": ["node","unplugin-vue-macros/macros-global" ],
  },
  "exclude": ["dist", "node_modules"],
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
